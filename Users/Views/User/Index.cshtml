<!-- Views/User/Index.cshtml -->
@model List<MVCUsers.Models.User>

<h2>List of Users</h2>

<table>
    <thead>
        <tr>
            <th>Name |</th>
            <th>| Surname |</th>
            <th>| Age |</th>
            <th>| Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Surname</td>
                <td>@user.Age</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create New User</a>
