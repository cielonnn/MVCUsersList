<!-- Views/User/Delete.cshtml -->
@model MVCUsers.Models.User

<h2>Delete User</h2>

<div class="card">
    <h3>Are you sure you want to delete this user?</h3>
    <div>
        <strong>Name:</strong> @Model.Name <br />
        <strong>Surname:</strong> @Model.Surname <br />
        <strong>Age:</strong> @Model.Age <br />
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" /> <!-- Upewnij się, że masz Id w modelu -->
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
